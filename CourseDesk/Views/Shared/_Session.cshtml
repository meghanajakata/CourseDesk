<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/session.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/CourseDesk.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style="background-color:#00203FFF; color:white;">
            <div class="container">
                <a class="navbar-brand" style="color:white;" asp-area="" asp-controller="Home" asp-action="Index">CourseDesk</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse flex-row-reverse justify-content-between">
                    <ul class="navbar-nav float-right">
                        <li class="nav-item ">
                            <a class="nav-link btn btn-secondary" asp-area="" asp-controller="Session" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item" style="margin-left:10px;">
                            <a class="nav-link btn btn-secondary" asp-area="" asp-controller="Session" asp-action="SignUp">SignUp</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
