@{
    ViewData["Title"] = "UploadVideo";
    Layout = "~/Views/Shared/_Instructor.cshtml";
}

<h2>UploadVideo</h2>

<h5>@ViewData["Course"]</h5>

<div class="row ">
    <div class="col-md-4 custom-bg-white">
        <form asp-action="UploadVideo" asp-route-course="@ViewData["Course"]" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <input id="Description" type="text" name="Description" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Video_Url" class="control-label">Choose File</label>
                <input id="Video_Url" name="Video_Url" class="form-control"  type="file" accept=".mp4"/>      
            </div>
           <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
