@model IEnumerable<CourseDesk.Models.Enrollment>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "MyCourses";
}
<div class="row bg-white" style="display:flex; padding:50px; border-radius:5px;">
@foreach(var item in Model)
    {
        <div class="col-md-3 col-sm-3 col-xs-6">
            <div class="img-thumbnail" style="height:210px;">
                <a asp-controller="#" asp-action="#" asp-route-id="@item.Course.Id">
                    <img src=@Html.DisplayFor(modelItem => item.Course.ImageUrl) alt="Image" style="width:100%;height:200px;justify-items:center">
                </a>    
            </div>
            <h5 class="header" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                <b>@Html.DisplayFor(modelItem => item.Course.Title)</b>
            </h5>
        </div>
    }
</div>

